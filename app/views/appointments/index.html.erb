<p id="notice"><%= notice %></p>
<h1>My Appointments</h1>
<div class="list-group">
<div class="overflow-auto">
  
  <% @appointments&.each do |app| %>
   <div class="forum-item">
      <%= link_to app, class: "list-group-item list-group-item-action" do %>
        <div class="d-flex w-100 justify-content-between ">
          <h5 class="mb-1"><b><%= app&.title %></b></h5>
          <small><b></b>From: <%= app&.start_date %></small>
        </div>
        <p class="mb-1"><%= app&.description %></p>
        <small><b>By Doctor: </b><%= app&.doctor_name %></small>            
      <% end %>
    </div>
    <% end %>

  </div>
</div>
<%= link_to 'New Appointment', new_appointment_path %>
